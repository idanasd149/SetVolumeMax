<resources>
    <!-- Base application theme. -->
    <style name="Theme.Soundapp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primaryVariant</item>
        <item name="colorOnPrimary">@color/onPrimary</item>
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondaryVariant</item>
        <item name="colorOnSecondary">@color/onSecondary</item>
        <item name="android:textColor">@color/textColor</item>
    </style>

    <style name="AppTheme.Button" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@color/button_text</item>
        <item name="android:backgroundTint">@color/button_background</item>
        <item name="strokeColor">@color/button_stroke</item>
    </style>

</resources>
